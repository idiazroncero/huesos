{
  "name": "huesos",
  "version": "1.3.6",
  "description": "Huesos is a front-end starterkit. It provides a basic CSS osamenta by combining some preferred and battle-tested tools.",
  "scripts": {
    "css": "yarn css:sass && yarn css:post",
    "css:watch": "yarn sass --watch src/scss:dist --load-path=node_modules",
    "css:sass": "yarn sass src/scss/style.scss dist/style.css --load-path=node_modules",
    "css:post": "yarn postcss dist/style.css -o dist/style.css --no-map",
    "css:mandlebrot": "yarn sass theme/huesos-mandlebrot.scss dist/styleguide/huesos-mandlebrot.css --load-path=node_modules",
    "css:mandlebrot:watch": "yarn sass --watch theme/huesos-mandlebrot.scss dist/styleguide/huesos-mandlebrot.css --load-path=node_modules",
    "styleguide:build": "yarn fractal build",
    "styleguide:serve": "yarn fractal start --sync",
    "sassdoc:build" : "yarn sassdoc src/scss/base/mixins -d docs/sassdoc",
    "test": "yarn sass src/scss/style.scss test/style.css --source-map=0",
    "lint:css": "stylelint dist/**/*.css",
    "build": "yarn styleguide:build; yarn css; yarn sassdoc:build",
    "serve": "yarn styleguide:serve",
    "huesos": "yarn build"
  },
  "author": "Nacho Diaz",
  "license": "MIT",
  "repository": "git@github.com:idiazroncero/huesos.git",
  "dependencies": {
    "breakpoint-sass": "^2.7.1",
    "family.scss": "^1.0.8"
  },
  "devDependencies": {
    "@frctl/fractal": "^1.5.6",
    "@frctl/mandelbrot": "^1.9.0",
    "autoprefixer": "^7.1.1",
    "browser-sync": "^2.26.14",
    "fractal-huesos": "git+https://github.com/idiazroncero/fractal-huesos.git",
    "handlebars": "^4.7.7",
    "handlebars-loader": "^1.5.0",
    "mobius1-selectr": "^2.4.4",
    "postcss": "^7.0.35",
    "postcss-cli": "^6.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-preset-env": "^6.6.0",
    "sass": "^1.32.8",
    "stylelint": "^7.12.0"
  }
}
