{
  "name": "huesos",
  "version": "1.0.5",
  "description": "Huesos is a front-end starterkit. It provides a basic CSS osamenta by combining some preferred and battle-tested tools.",
  "scripts": {
    "build": "yarn run styleguide; yarn css",
    "huesos": "yarn run build",
    "css": "yarn css:sass && yarn css:cssnext",
    "css:watch": "yarn node-sass src/scss/style.scss dist/style.css -w",
    "css:sass": "yarn node-sass src/scss/style.scss dist/style.css --source-map=0",
    "css:cssnext": "yarn postcss dist/style.css -o dist/style.css -u postcss-cssnext --no-map",
    "styleguide": "yarn styleguide:style && yarn kss --source src/scss --builder src/kss-src  --destination docs",
    "styleguide:style": "yarn styleguide:sass && yarn styleguide:cssnext",
    "styleguide:sass": "yarn node-sass src/kss-src/kss-assets/kss.scss src/kss-src/kss-assets/kss.css --output-style compressed --source-map=0",
    "styleguide:cssnext": "yarn postcss src/kss-src/kss-assets/kss.css -o src/kss-src/kss-assets/kss.css --use postcss-cssnext --no-map",
    "test-page" : "yarn node-sass src/scss/style.scss test/style.css --source-map=0",
    "lint:js": "eslint src/js webpack.*.js --cache --debug",
    "lint:css": "stylelint dist/css/*.css"
  },
  "author": "Nacho Diaz",
  "license": "MIT",
  "repository": "git@github.com:idiazroncero/huesos.git",
  "dependencies": {
    "animate-scss": "^3.2.1",
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.5.2",
    "bootstrap": "^4.0.0-alpha.6",
    "breakpoint-sass": "^2.7.1",
    "clean-webpack-plugin": "^0.1.16",
    "concise.css": "^4.1.2",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "eslint-loader": "^1.8.0",
    "extract-text-webpack-plugin": "^2.1.2",
    "family.scss": "^1.0.8",
    "file-loader": "^1.1.6",
    "foundation-sites": "^6.4.1",
    "global": "^4.3.2",
    "handlebars": "^4.0.10",
    "handlebars-loader": "^1.5.0",
    "html-webpack-plugin": "^2.29.0",
    "kss": "^3.0.0-beta.23",
    "kss-webpack-plugin": "^1.2.0",
    "lodash": "^4.17.4",
    "node-sass": "^4.9.3",
    "node-sass-import": "^2.0.1",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-loader": "^2.0.6",
    "ritmo": "^0.5.0",
    "sanitize.css": "^5.0.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^7.12.0",
    "susy": "^2.2.12",
    "uikit": "^3.0.0-beta.25",
    "url-loader": "^0.6.2",
    "waypoints": "^4.0.1",
    "webpack": "^3.0.0"
  },
  "browserslist": [
    "> 1%"
  ]
}
