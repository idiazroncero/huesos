{% extends "layouts/pjax.nunj" if request.isPjax else "layouts/frame.nunj" %}

{% block content %}

<div class="doc">

    <div class="doc__header">
        {% block docHeader %}
        <h1 class="h2">{{ page.title }}</h1>
        {% if status %}{{ status }}{% endif %}
        {% endblock %}
    </div>

    <div class="doc__body text-wrapper">

    {% block docContent %}{% endblock %}

    </div>

</div>

{% endblock %}
